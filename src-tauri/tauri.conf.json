{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "gooselib",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true
      },
      "path":{
        "all": true
      },      
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*", "http://*"]
      },
      "shell": {
        "sidecar": true,
        "scope": [
            {"name": "../svr/build/gl-downloader", "sidecar": true, "args": true },
            {"name": "../svr/build/gl-packager", "sidecar": true, "args": true }
        ]
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "../svr/build/gl-downloader",
        "../svr/build/gl-packager"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.lolkilee.gooselib",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/Lolkilee/96111c68c1e2744b561a580ebaa06327/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEwNDNGQUI2MEIwN0Y1MUQKUldRZDlRY0x0dnBERUZkL3NhZUZ1dmRYRzROVFpGbjNPa29RMk5VWnFyWE45djNuNzhsN244Ky8K",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "GooseLib",
        "width": 800
      }
    ]
  }
}
